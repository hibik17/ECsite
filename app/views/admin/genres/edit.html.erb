<div class="container mx-auto px-sm-0">

  <div class="row mt-5 my-5">
    <div class="col-auto offset-2">
      <div class="grey-box mb-auto px-2">
        <h2>ジャンル編集</h2>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= render "layouts/errors", obj: @genre %>
    </div>
  </div>


  <%= form_with model: @genre, url: admin_genre_path(@genre), local: true do |f| %>
    <div class="row my-5">
      <div class="col-2 text-center">
        ジャンル名
      </div>
      <div class="col-3">
        <%= f.text_field :name, autofocus: true, placeholder: "ジャンル名" %>
      </div>
      <div class="col-3">
        <%= f.submit "変更を保存" ,class:"btn btn-success px-3" %>
      </div>
    </div>
  <% end %>

</div>