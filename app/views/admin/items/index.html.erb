<div class="container mx-auto px-sm-0">

  <div class="row mt-5 my-5">
    <div class="col-3 offset-2 text-center">
      <div class="grey-box mb-auto">
        <% if @keyword %>
          <% if @keyword.length > 0 %>
            <h2><%= @keyword %>一覧</h2>
          <% else %>
            <h2>商品一覧</h2>
          <% end %>
        <% else %>
          <h2>商品一覧</h2>
        <% end %>
      </div>
    </div>
    <div class="col-2 offset-4">
      <%= link_to(new_admin_item_path,class:"btn-circle-3d")do %>
        <div class="fa fa-plus"></div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <table class="table">
      <thead>
        <tr class="table-secondary">
          <th style="width:10%">商品ID</th>
          <th style="width:30%">商品名</th>
          <th style="width:15%">税抜価格</th>
          <th style="width:25%">ジャンル</th>
          <th style="width:20%">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><u><%= link_to item.name, admin_item_path(item), class:"text-dark"%></u></td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_sold %>
                <span class="valid-status">販売中</span>
              <% else %>
                <span class="unvalid-status">販売停止中</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>


</div>
