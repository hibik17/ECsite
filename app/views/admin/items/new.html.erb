<div class="container mx-auto px-sm-0">

  <div class="row mt-5 my-5">
    <div class="col-3 offset-2 text-center">
      <div class="grey-box mb-auto">
        <h2>商品新規登録</h2>
      </div>
    </div>
  </div>

  <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
    <div class="row my-2">
      <div class="col-2 offset-3">
        商品画像
      </div>
      <div class="col-4">
        <%= f.attachment_field :image %>
      </div>
    </div>

    <div class="row mt-4 mb-2">
      <div class="col-2 offset-3">
        商品名
      </div>
      <div class="col-4">
        <%= f.text_field :name, placeholder:"商品名", class:"full-width" %>
      </div>
    </div>

  　<div class="row my-2">
      <div class="col-2 offset-3">
        商品説明
      </div>
      <div class="col-4">
        <%= f.text_area :explanation, rows:"5", placeholder:"ここに説明文を記載します", class:"full-width" %>
      </div>
    </div>

    <div class="row my-4">
      <div class="col-2 offset-3">
        ジャンル
      </div>
      <div class="col-4">
        <%= f.collection_select :genre_id, @genres, :id, :name, include_blank: "--選択してください--", class:"full-width" %>
      </div>
    </div>

    <div class="row my-4">
      <div class="col-2 offset-3">
        税抜価格
      </div>
      <div class="col-4">
        <%= f.number_field :price, placeholder:"1000", class:"full-width" %>
      </div>
      <div class="col">
        円
      </div>
    </div>

    <div class="row my-4">
      <div class="col-2 offset-3">
        販売ステータス
      </div>
      <div class="col-2">
        <%= f.radio_button :is_sold, true %>販売中
      </div>
      <div class="col-2">
        <%= f.radio_button :is_sold, false %>販売停止中
      </div>
    </div>

    <div class="row my-4 justify-content-center">
      <div class="col-6 offset-3">
        <%= f.submit "新規登録", class:"btn btn-success px-4 py-2" %>
      </div>
    </div>
  <% end %>
  
</div>
