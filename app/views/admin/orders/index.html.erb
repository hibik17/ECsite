<div class="container mx-auto px-sm-0">

  <div class="row mt-5 my-5">
    <div class="col-3 offset-2 text-center">
      <div class="grey-box mb-auto">
        <h2>注文履歴</h2>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr class="table secondary">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><u><%= link_to order.created_at.to_s(:ja), admin_order_path(order), class:"text-dark" %></u></td>
              <td><%= order.end_user.family_name %><%= order.end_user.first_name %></td>
              <td><%= order.total_amount %></td>
              <td><%= order.status_i18n %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>