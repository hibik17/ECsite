<div class="container mx-auto px-sm-0">
<div class="row">
  <div class="col-3">
    <table class="table">
      <thead>
        <th><p class="text-center">ジャンル検索</p></th>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= link_to genre.name, items_path(genre_id: genre.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-8 offset-1">
    <div class="row mt-5 my-5">
      <div class="col-3 text-center fw-bold">
        <% if @genre %>
          <h2><%= @genre.name %>一覧</h2>
        <% else %>
          <h2>商品一覧</h2>
        <% end %>
      </div>
      <div class="col align-self-end">
        (全<%= @items.count %>件)
      </div>
    </div>

    <div class="row">
      <% @items.each do |item| %>
      <div class="col-lg-3 col-6">
        <div class="item-container">
          <%= link_to item_path(item) do %>
            <%= attachment_image_tag item, :image, :fill, 200, 100, format:"jpeg",fallback:"no_products_found.png", size:"200x100", class:"my-2" %>
          <% end %>
          <p class="font-weight-bold"><%= item.name %></p>
          <p>¥<%= item.price.to_s(:delimited) %></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>


</div>