<div class="container px-5 px-sm-0">
  <div class="row p-3 m-3">
    <div class="grey-box px-3">
      <h3>新規会員登録</h3>
    </div>
  </div>

  <%= form_with model: @end_user, url: end_user_registration_path, id: 'new_end_user', class: 'new_end_user', local: true do |f| %>
    <%= render "end_users/shared/error_messages", resource: resource %>
    <div class="row m-2">
      <div class="col-4">
        名前
      </div>
      <div class="col-4">
        (姓)　<%= f.text_field :family_name, autofocus: true, placeholder: "令和" %>
      </div>
      <div class="col-4">
        (名)　<%= f.text_field :first_name, autofocus: true, placeholder: "道子" %>
      </div>
    </div>
    <div class="row m-2">
      <div class="col-4">
        フリガナ
      </div>
      <div class="col-4">
        (セイ)　<%= f.text_field :family_name_kana, autofocus: true, placeholder: "レイワ" %>
      </div>
      <div class="col-4">
        (メイ)　<%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ" %>
      </div>
    </div>
    <div class="row m-2">
      <div class="col-4">
        メールアドレス
      </div>
      <div class="col-4">
        <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com" %>
      </div>
    </div>
    <div class="row m-2">
      <div class="col-4">
        郵便番号(ハイフンなし)
      </div>
      <div class="col-4">
        <%= f.text_field :zip_code, autofocus: true, placeholder: "0000000" %>
      </div>
    </div>
    <div class="row m-2">
      <div class="col-4">
        住所
      </div>
      <div class="col">
        <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", class:"full-width"%>
      </div>
    </div>
    <div class="row m-2">
      <div class="col-4">
        電話番号(ハイフンなし)
      </div>
      <div class="col-4">
        <%= f.text_field :phone_number, autofocus: true, placeholder: "00000000000" %>
      </div>
    </div>
    <div class="row m-2">
      <div class="col-4">
        パスワード(6文字以上)
      </div>
      <div class="col-4">
        <%= f.password_field :password, placeholder: "new-password" %>
      </div>
    </div>
    <div class="row m-2">
      <div class="col-4">
        パスワード(確認用)
      </div>
      <div class="col-4">
        <%= f.password_field :password_confirmation, placeholder: "new-password" %>
      </div>
    </div>
    <div class="row m-2">
      <div class="col-4 offset-4">
        <div class="actions">
          <%= f.submit "Sign up" ,class:"btn btn-success btn-block" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row m-4">
    <div class="grey-box px-3">
      <h3>既に登録済みの方</h3>
    </div>
  </div>

  <div class="row px-5 ms-3">
    <%= link_to "こちら", new_end_user_session_path %> からログインしてください。
  </div>

</div>

