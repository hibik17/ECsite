<div class="container px-5 px-sm-0">

  <div class="row p-3 m-3">
    <div class="grey-box px-3">
      <h3>管理者ログイン</h3>
    </div>
  </div>

  <%= form_with model: @admin, url: admin_session_path, id: 'admin', class: 'admin', local: true do |f| %>
  <div class="row mx-auto py-1">
    <div class="col-2">
      メールアドレス
    </div>
    <div class="col-6">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row mx-auto py-1">
    <div class="col-2">
      パスワード
    </div>
    <div class="col-6">
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  </div>

  <div class="row mx-auto py-3">
    <div class="col-2 offset-2">
      <div class="actions">
        <%= f.submit "Log in", class:"btn btn-block btn-primary" %>
      </div>
    </div>
  </div>
  <% end %>

</div>